        <item name="colorPrimary">@color/verde_menta</item>
        <item name="colorPrimaryVariant">@color/verde_suave</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde_Supersuave</item>
        <item name="colorSecondaryVariant">@color/verde_oscurito</item>
        <item name="colorOnSecondary">@color/black</item>
