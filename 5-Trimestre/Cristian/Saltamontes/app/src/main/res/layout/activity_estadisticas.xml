<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.EstadisticasActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Mis pequeÃ±os saltamontes"
        android:textAlignment="center"
        android:textColor="@color/verde_oscurito"        android:textSize="27dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:text="Cantidad de estudiantes procesados: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textCantProcesados"
            android:layout_width="56dp"
            android:layout_height="51dp"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="337dp"
            android:layout_height="51dp"
            android:text="Cantidad de estudiantes que ganan: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textCantGanan"
            android:layout_width="56dp"
            android:layout_height="51dp"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:text="Cantidad de estudiantes que pierden: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textCantPierden"
            android:layout_width="56dp"
            android:layout_height="51dp"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="337dp"
            android:layout_height="match_parent"
            android:text="Cantidad de estudiantes que pueden recuperar: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textCantRecuperan"
            android:layout_width="56dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>



</LinearLayout>

