<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.ProcesosActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="911dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Mis pequeÃ±os saltamontes"
                android:textAlignment="center"
                android:textColor="@color/verde_oscurito"                android:textSize="27dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/Nombre"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="15dp"
                    android:ems="5"
                    android:gravity="center"
                    android:hint="Ingrese su nombre completo"
                    android:inputType="textPersonName"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Documento"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:ems="5"
                    android:gravity="center"
                    android:hint="Ingrese su documento"
                    android:inputType="numberSigned"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/Edad"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:hint="Ingrese su edad"
                    android:inputType="numberSigned"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Telefono"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:ems="5"
                    android:gravity="center"
                    android:hint="Ingrese su nombre telefono"
                    android:inputType="phone"
                    android:textSize="13sp" />

            </LinearLayout>





            <EditText
                android:id="@+id/Direccion"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="15dp"
                android:ems="5"
                android:gravity="center"
                android:hint="Ingrese su nombre direccion"
                android:inputType="textPersonName"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="120dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Materias" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="120dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Notas" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Materia1"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Materia 1"
                    android:inputType="textPersonName"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Nota1"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Nota 1"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Materia2"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Materia 2"
                    android:inputType="textPersonName"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Nota2"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Nota 2"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Materia3"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Materia 3"
                    android:inputType="textPersonName"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Nota3"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Nota 3"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Materia4"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Materia 4"
                    android:inputType="textPersonName"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Nota4"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Nota 4"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Materia5"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Materia 5"
                    android:inputType="textPersonName"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Nota5"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Nota 5"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:id="@+id/registrar"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="20dp"
                android:text="REGISTRAR" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="120dp"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
