package Procesos;

import java.util.ArrayList;

import javax.swing.JOptionPane;

public class Procesos {
ArrayList<Usuarios>listaUsuarios;
	
	public Procesos() {

		listaUsuarios=new ArrayList<Usuarios>();
				
	
	}
	
	

	public int calculaEdad(String anoactual, String anoUsuario, String diaActual, String diaUsuario, String mesActual, String mesUsuario) {
	    int yearActual=Integer.parseInt(anoactual);
	    int yearUser=Integer.parseInt(anoUsuario);
	    int mountActual=Integer.parseInt(mesActual);
	    int mountUser=Integer.parseInt(mesUsuario);
	    int dayActual=Integer.parseInt(diaActual);
	    int dayUser=Integer.parseInt(diaUsuario);
	    
	    int a√±os= yearActual-yearUser;
	    int meses= mountActual-mountUser;
	    int dias=dayActual-dayUser;
	    
	    		
		return 0;
	}

	public void guardarUsuario(Usuarios miUsuario) {
		listaUsuarios.add(miUsuario);
		JOptionPane.showMessageDialog(null, "Usuario agregado");
		
	}



	public String imprimirUsuarios() {
		String imp="";
		if(listaUsuarios == null || listaUsuarios.size() == 0)
		{
			JOptionPane.showMessageDialog(null, "No hay personas que mostrar \n ", "ERROR",JOptionPane.ERROR_MESSAGE);
		}
		else {
			
			for (Usuarios usuarios : listaUsuarios) {
				imp+=usuarios+"\n";
			}	
		}
		return imp;
	



}
